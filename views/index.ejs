<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>

    <%- include('./partials/nav.ejs') %>

    <div class="blog content">
        <h2>ALl Blogs</h2>

        <% if (blogs.length > 0) { %> 

            <% blogs.forEach(blog => { %>
                <h3 class="title"> <%= blog.title %>  </h3>
                <p class="snippet"> <%= blog.snippet %> </p>
            <% }) %>  

        <% } else { %> 
            <p>There are blogs to display</p>
        <% } %> 
    </div>

    <%- include('./partials/footer.ejs') %>
    
</body>
</html>